xpipeline {
    agent any

    // âš ï¸ On enlÃ¨ve tools{} pour ne plus avoir d'erreur Maven
    // tools { maven "M2_HOME" }

    environment {
        // Injecte les credentials Docker Hub (ID = 'dockerhub')
        DOCKER_CREDENTIALS = credentials('dockerhub')
    }

    stages {

        stage("Code Checkout") {
            steps {
                git branch: 'master',
                    url: 'https://github.com/sansgogu/DevOps.git'
            }
        }

        // ğŸ§ª Tests + JaCoCo (gÃ©nÃ¨re le rapport de couverture)
        stage('Code Test') {
            steps {
                sh "mvn clean test jacoco:report"
            }
        }

        // ğŸ” Analyse SonarQube
        stage('Sonar Test') {
            steps {
                withSonarQubeEnv('SQ1') {
                    sh """
                        mvn sonar:sonar \
                          -Dsonar.projectKey=student-management \
                          -Dsonar.projectName=student-management
                    """
                }
            }
        }

        // ğŸ— Build du jar (sans relancer les tests)
        stage('Code Build') {
            steps {
                sh "mvn package -DskipTests"
            }
        }

        // ğŸ³ Build de l'image Docker
        stage('Docker Build') {
            steps {
                sh "docker build -t aymen/student-management:${BUILD_NUMBER} ."
            }
        }

        // ğŸš€ Push de l'image sur Docker Hub
        stage('Docker Push') {
            steps {
                sh 'echo $DOCKER_CREDENTIALS_PSW | docker login -u $DOCKER_CREDENTIALS_USR --password-stdin'
                sh "docker push aymen/student-management:${BUILD_NUMBER}"
            }
        }
    }

    post {
        success {
            echo "âœ… Pipeline terminÃ© avec succÃ¨s (build #${BUILD_NUMBER})"
        }
        failure {
            echo "âŒ Pipeline en Ã©chec (build #${BUILD_NUMBER})"
        }
    }
}
