pipeline {
    agent any

    tools {
        maven 'M3'
        jdk 'jdk17'   // si configur√© dans Jenkins
    }

    environment {
        SONARQUBE_ENV = "SonarQube"     // nom du server Sonar dans Manage Jenkins
    }

    stages {

        stage('Checkout Git') {
            steps {
                git branch: 'main', url: 'https://github.com/sansgogu/avec-maven.git'
            }
        }

        stage('Build & Unit Tests') {
            steps {
                sh 'mvn -B clean test'
            }
        }

        stage('Code Quality - SonarQube') {
            steps {
                script {
                    withSonarQubeEnv(SONARQUBE_ENV) {
                        sh '''
                            mvn sonar:sonar \
                            -Dsonar.projectKey=avec-maven \
                            -Dsonar.projectName="avec-maven" \
                            -Dsonar.projectVersion=1.0
                        '''
                    }
                }
            }
        }

        stage('V√©rification Qualit√© (Quality Gate)') {
            steps {
                script {
                    timeout(time: 3, unit: 'MINUTES') {
                        waitForQualityGate abortPipeline: true
                    }
                }
            }
        }

        stage('Packaging') {
            steps {
                sh 'mvn -B package -DskipTests'
            }
        }

        stage('Analyse de couverture (JaCoCo)') {
            steps {
                sh 'mvn jacoco:report'
            }
        }

        stage('Archivage Artifacts') {
            steps {
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }

        stage('D√©ploiement') {
            when {
                branch 'main'
            }
            steps {
                echo "D√©ploiement sur le serveur‚Ä¶"
                // Exemple : copie fichier vers serveur Linux
                // sh "scp target/*.jar user@serveur:/deploy/"
            }
        }
    }

    post {
        success {
            echo 'üèÜ Pipeline ex√©cut√© avec succ√®s !'
        }
        failure {
            echo '‚ùå Pipeline √©chou√©.'
        }
        always {
            echo 'üìå Pipeline termin√©.'
        }
    }
}
